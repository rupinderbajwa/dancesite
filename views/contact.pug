extends base.pug
block scripts 
   scripts
      include ../static/index.js
block style 
   style 
      include ../static/nstyle.css 
      include ../static/contactstyle.css 
block content 
   div.container
      h1  contact us 
        
      form(action="/contact",method="post",class="myform")
       input(type="text",class="myinput",name="name",placeholder="enter your name")
       input(type="phone",class="myinput",name="phone",placeholder="enter your phone no")
       input(type="email",class="myinput",name="email",placeholder="enter your email")
       input(type="text",class="myinput",name="address",placeholder="enter your adress")
       input(type="text",class="myinput",name="desc",placeholder="enter your more information")
       button(class="btn")
           | Submit
       